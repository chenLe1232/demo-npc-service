{
  "name": "koa-app",
  "version": "1.0.0",
  "description": "A Koa-based web application",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'node --loader ts-node/esm' src/app.ts",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.0",
    "koa-send": "^5.0.1",
    "openai": "^4.72.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/koa-send": "^4.1.6",
    "@types/node": "^22.9.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
